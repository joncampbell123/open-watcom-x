# OWL library finder.
# ~~~~~~~~~~~~~~~~~~
#

!ifdef bootstrap
cli_owl_libs = $(owl_dir)/$(objs_subdir)/owl.lib
!else ifdef $(proj_name)_rtdll
#
# OWL run-time DLL used
#
cli_owl_libs = $(owl_dir)/$(objs_subdir).rtd/owl.lib
!else ifdef $(proj_name)_dll
#
# OWL DLL used
#
cli_owl_libs = $(owl_dir)/$(objs_subdir).dll/owl.lib
!else
#
# OWL library used
#
cli_owl_libs = $(owl_dir)/$(objs_subdir)/owl.lib
!endif

cli_owl_inc_dirs = -I"$(owl_dir)/h"
