proj_name = re2c

re2c_autodepends = .autodepend

additional_clean = ytab.c ytab.h y.out

!include cproj.mif
!include defrule.mif
!include deftarg.mif

#
# cflags
#
.c: ../c

inc_dirs = -I. -I"$(re2c_dir)/h"

!ifdef __WATCOM_TOOLS__
extra_c_flags_ytab = -pil
!endif

# explicit rules
#################

#
# EXE
#
exetarg_prebuild_objs = ytab.c ytab.h
exetarg_objs = &
    actions.obj &
    code.obj &
    dfa.obj &
    main.obj &
    ytab.obj &
    scanner.obj &
    substr.obj
!include exetarg.mif

#
# rc and others
#
yacc_options = -d -db -de

ytab.c ytab.h : ../h/parser.y ../c/yydriver.c
    @%make echo_yacc
    $(yacc) $(yacc_options) $< >y.out
